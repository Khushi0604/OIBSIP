<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/solution_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/result_tv"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="50sp" />


    <TextView
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttons_layout"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="1dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="60sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="#F1F1F1"
        android:paddingVertical="15dp"
        android:id="@+id/buttons_layout">

        <LinearLayout
            android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:orientation="horizontal">
             <com.google.android.material.button.MaterialButton
                 android:id="@+id/button_c"
                 android:layout_width="72dp"
                 android:layout_height="72dp"
                 android:layout_margin="13dp"
                 android:backgroundTint="@color/material_dynamic_neutral_variant80"
                 android:text="C"
                 android:textColor="@color/black"
                 android:textSize="28sp"
                 app:cornerRadius="30dp"/> <!--C-->
            <!--(-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_open_bracket"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="13dp"
                android:text="("
                android:textColor="@color/black"
                android:textSize="28sp"
                app:cornerRadius="30dp" />

            <com.google.android.material.button.MaterialButton
                 android:layout_width="72dp"
                 android:layout_height="72dp"
                 app:cornerRadius="30dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                 android:text=")"
                 android:textSize="28sp"
                 android:textColor="@color/black"
                 android:id="@+id/button_close_bracket"
                 android:layout_margin="13dp"/> <!--)-->
             <com.google.android.material.button.MaterialButton
             android:layout_width="72dp"
             android:layout_height="72dp"
             app:cornerRadius="30dp"
             style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
             android:text="/"
             android:textSize="28sp"
             android:textColor="@color/black"
             android:id="@+id/button_divide"
             android:layout_margin="13dp"/> <!--divide-->

         </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="30dp"
                android:backgroundTint="@color/purple_200"
                android:text="7"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:id="@+id/button_7"
                android:layout_margin="13dp"/> <!--7-->
                <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="30dp"
                    android:backgroundTint="@color/purple_200"
                android:text="8"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:id="@+id/button_8"
                android:layout_margin="13dp"/> <!--8-->
                <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="30dp"
                    android:backgroundTint="@color/purple_200"
                android:text="9"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:id="@+id/button_9"
                android:layout_margin="13dp"/> <!--9-->
                <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="30dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="*"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:id="@+id/button_multiply"
                android:layout_margin="13dp"/> <!--*-->
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="30dp"
                android:backgroundTint="@color/purple_200"
                android:text="4"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:id="@+id/button_4"
                android:layout_margin="13dp"/> <!--4-->
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="30dp"
                android:backgroundTint="@color/purple_200"
                android:text="5"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:id="@+id/button_5"
                android:layout_margin="13dp"/> <!--5-->
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="30dp"
                android:backgroundTint="@color/purple_200"
                android:text="6"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:id="@+id/button_6"
                android:layout_margin="13dp"/> <!--6-->
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="30dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="+"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:id="@+id/button_add"
                android:layout_margin="13dp"/> <!--add-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="30dp"
                android:backgroundTint="@color/purple_200"
                android:text="1"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:id="@+id/button_1"
                android:layout_margin="13dp"/> <!--1-->
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="30dp"
                android:backgroundTint="@color/purple_200"
                android:text="2"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:id="@+id/button_2"
                android:layout_margin="13dp"/> <!--2-->
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="30dp"
                android:backgroundTint="@color/purple_200"
                android:text="3"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:id="@+id/button_3"
                android:layout_margin="13dp"/> <!--3-->
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="30dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="-"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:id="@+id/button_subtract"
                android:layout_margin="13dp"/> <!--subtract-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="30dp"
                android:backgroundTint="@color/material_dynamic_neutral_variant80"
                android:text="AC"
                android:textSize="21sp"
                android:textColor="@color/black"
                android:id="@+id/button_ac"
                android:layout_margin="13dp"/> <!--AC-->
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="30dp"
                android:backgroundTint="@color/purple_200"
                android:text="0"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:id="@+id/button_0"
                android:layout_margin="13dp"/> <!--0-->
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="30dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="."
                android:textSize="28sp"
                android:textColor="@color/black"
                android:id="@+id/button_dot"
                android:layout_margin="13dp"/> <!--dot-->
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="30dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="="
                android:textSize="28sp"
                android:textColor="@color/black"
                android:id="@+id/button_equals"
                android:layout_margin="13dp"/> <!--equal to-->
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>